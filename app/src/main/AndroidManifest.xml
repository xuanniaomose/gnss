<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <!-- 定位权限（前台） -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 后台定位 -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <!-- 声明使用GPS硬件 -->
    <uses-feature android:name="android.hardware.location.gps" android:required="true" />

    <!-- 网络权限（用于加载天地图瓦片） -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 网络状态权限：判断网络是否可用 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Wi-Fi状态权限：用于Wi-Fi定位辅助 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/xn_map192"
        android:label="@string/app_name"
        android:roundIcon="@drawable/xn_map192"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gnss"
    >

        <activity
            android:name=".GnssActivity"
            android:exported="true"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".webmap.MapActivity"
            android:screenOrientation="portrait"
        >  <!-- 锁定竖屏 -->
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="设置"
            android:parentActivityName=".webmap.MapActivity"
        /> <!-- 关联到MapActivity -->
    </application>

</manifest>