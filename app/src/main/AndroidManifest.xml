<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <!-- 定位权限（前台） -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 后台定位 -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <!-- 声明使用GPS硬件 -->
    <uses-feature android:name="android.hardware.location.gps"
                  android:required="true" />

    <!-- 网络权限（用于加载天地图瓦片） -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 网络状态权限：判断网络是否可用 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Wi-Fi状态权限：用于Wi-Fi定位辅助 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 写入文件的权限-->
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
                     android:maxSdkVersion="32" tools:ignore="ScopedStorage"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/xn_map192"
        android:label="@string/app_name"
        android:roundIcon="@drawable/xn_map192"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gnss"
    >
        <activity
            android:name=".GnssActivity"
            android:exported="true"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MapFragment"
            android:screenOrientation="portrait"
        >  <!-- 锁定竖屏 -->
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="设置"
            android:parentActivityName=".ui.MapFragment"
        />

        <service
            android:name=".sql.Export"
            android:foregroundServiceType="dataSync"
            android:exported="false"
        />

        <!-- 允许 fastjson2 反射访问类属性 -->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false"
        />
    </application>

</manifest>