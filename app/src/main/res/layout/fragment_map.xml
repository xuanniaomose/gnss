<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/web_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true"
    tools:context=".ui.MapFragment"
>
    <WebView
        android:id="@+id/wv_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
    />
    <ImageButton
        android:id="@+id/btn_locate"
        app:srcCompat="@drawable/locate"
        android:contentDescription="locate"
        android:layout_width="42dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/gray_300"
        app:layout_constraintEnd_toEndOf="@+id/wv_map"
        app:layout_constraintBottom_toTopOf="@+id/btn_expand"
    />
    <ImageButton
        android:id="@+id/btn_expand"
        app:srcCompat="@drawable/expand"
        android:contentDescription="expand"
        android:layout_width="42dp"
        android:layout_height="45dp"
        android:layout_marginBottom="-3dp"
        android:layout_marginHorizontal="18dp"
        android:backgroundTint="@color/gray_300"
        app:layout_constraintEnd_toEndOf="@+id/wv_map"
        app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>