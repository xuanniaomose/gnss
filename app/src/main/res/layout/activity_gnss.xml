<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true"
    tools:context=".GnssActivity"
>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginVertical="45dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_mid"
    />

    <!-- 指示点容器：居中在底部 -->
    <xuanniao.map.gnss.ui.PagerIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp_top"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_mid"
    />

    <TableLayout
        android:id="@+id/tl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_mid"
    >
        <TableRow
            android:layout_margin="10dp"
        >
            <LinearLayout
                android:id="@+id/ll_avg_speed"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
            >
                <TextView
                    android:id="@+id/tv_avg_speed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平均速度"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_avg_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_avg_speed_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km/h"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bearing"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
            >
                <TextView
                    android:id="@+id/tv_bearing_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="航向"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_bearing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textStyle="bold"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_acceleration"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
            >
                <TextView
                    android:id="@+id/tv_acceleration_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加速度"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_acceleration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_acceleration_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m/s²"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_margin="10dp"
        >
            <LinearLayout
                android:id="@+id/ll_lon"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
            >
                <TextView
                    android:id="@+id/tv_lon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经度"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_lon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/green_500"
                    android:textStyle="bold"
                    android:textSize="18sp"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_altitude"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
            >
                <TextView
                    android:id="@+id/tv_altitude_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="海拔"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_altitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 米"
                    android:textStyle="bold"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lat"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
            >
                <TextView
                    android:id="@+id/tv_lat_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="纬度"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_lat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/green_500"
                    android:textStyle="bold"
                    android:textSize="18sp"
                />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_margin="10dp"
        >
            <LinearLayout
                android:id="@+id/ll_accuracy"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
            >
                <TextView
                    android:id="@+id/tv_accuracy_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定位精度"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0m"
                    android:textStyle="bold"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_satellite"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
            >
                <TextView
                    android:id="@+id/tv_satellite_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星座"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_satellite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textStyle="bold"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_satellite_time"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
            >
                <TextView
                    android:id="@+id/tv_satellite_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星历时间"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_satellite_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_margin="10dp"
        >
            <LinearLayout
                android:id="@+id/ll_timing"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginStart="20dp"
            >
                <TextView
                    android:id="@+id/tv_timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textStyle="bold"
                    android:textColor="@color/green_500"
                    android:textSize="36sp"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mileage"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
            >
                <TextView
                    android:id="@+id/tv_mileage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="里程"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                />
                <TextView
                    android:id="@+id/tv_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0m"
                    android:textStyle="bold"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                />
            </LinearLayout>

        </TableRow>
    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_record"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_mid"
        app:layout_constraintBottom_toTopOf="@+id/sbg_control"
        android:visibility="gone"
    />

    <xuanniao.map.gnss.ui.SlideButtonGroup
        android:id="@+id/sbg_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />

    <!-- 辅助参考线：将屏幕分为上下两部分，便于布局对齐 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45
"
    />

    <ImageButton
        android:id="@+id/btn_settings"
        android:contentDescription="设置"
        app:srcCompat="@drawable/settings"
        android:backgroundTint="@color/transparent"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>